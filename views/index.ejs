<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bill Tracker</title>
    <link rel="stylesheet" href="/styles/index.css" />
    <style>
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
      }
      th,
      td {
        padding: 10px;
        border: 1px solid #ccc;
        text-align: left;
      }
      th {
        background-color: #007bff;
        color: #fff;
      }
      tr:nth-child(even) {
        background-color: #f2f2f2;
      }
      h1 {
        text-align: center;
      }
    </style>
  </head>
  <body>
    <h1>Bill Tracker</h1>

    <table>
      <thead>
        <tr>
          <th>Bill #</th>
          <th>Name</th>
          <th>Sponsor</th>
          <th>Description</th>
          <th>Status</th>
          <th>Bike Utah Support</th>
          <th>Updated</th>
        </tr>
      </thead>
      <tbody>
        <% bills.forEach(bill => { %>
        <tr>
          <td><%= bill.bill %></td>
          <td><%= bill.shorttitle %></td>
          <td><%= bill.sponsor %></td>
          <td><%= bill.description || '' %></td>
          <td><%= bill.status %></td>
          <td><%= bill.support ? 'Yes' : 'No' %></td>
          <td><%= new Date(bill.updated).toLocaleString() %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </body>
</html>
